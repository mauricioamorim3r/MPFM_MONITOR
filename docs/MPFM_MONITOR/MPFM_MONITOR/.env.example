# MPFM Monitor - Environment Variables
# Copy this file to .env and update the values

# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws

# PI System Integration
VITE_PI_SYSTEM_URL=https://pi-server.example.com
VITE_PI_SYSTEM_USERNAME=
VITE_PI_SYSTEM_PASSWORD=

# Azure AD (SSO)
VITE_AZURE_CLIENT_ID=
VITE_AZURE_TENANT_ID=
VITE_AZURE_REDIRECT_URI=http://localhost:3000/auth/callback

# Feature Flags
VITE_ENABLE_PI_INTEGRATION=false
VITE_ENABLE_SSO=false
VITE_ENABLE_WEBSOCKET=true

# Polling Intervals (ms)
VITE_MONITORING_POLL_INTERVAL=300000
VITE_ALERTS_POLL_INTERVAL=60000

# Limits (ANP 44/2015)
VITE_HC_BALANCE_LIMIT=10
VITE_TOTAL_BALANCE_LIMIT=7
VITE_CONSECUTIVE_DAYS_LIMIT=10
VITE_K_FACTOR_MIN=0.80
VITE_K_FACTOR_MAX=1.20
